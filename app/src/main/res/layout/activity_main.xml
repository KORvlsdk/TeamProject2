<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryRecyclerView"
            android:layout_width="410dp"
            android:layout_height="116dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <androidx.cardview.widget.CardView
            android:id="@+id/searchCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoryRecyclerView">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconifiedByDefault="true"
                app:queryHint="어디로 여행 가세요?" />

        </androidx.cardview.widget.CardView>

        <!-- TextView를 감싸는 LinearLayout 추가 -->
        <LinearLayout
            android:id="@+id/textViewContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchCardView">

            <!-- TextView -->
            <TextView
                android:id="@+id/customTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이달의 추천 여행지"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:padding="8dp"
                />

        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imageViewPager"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/customTextView" />

        <TextView
            android:id="@+id/imageDescriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="다대포"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imageViewPager2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/imageDescriptionTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/customTextView" />

        <TextView
            android:id="@+id/imageDescriptionTextView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="감천문화마을"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPager2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imageViewPager3"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/imageDescriptionTextView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/customTextView" />

        <TextView
            android:id="@+id/imageDescriptionTextView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="해운대"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPager3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imageViewPager4"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/imageDescriptionTextView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/customTextView" />


        <TextView
            android:id="@+id/imageDescriptionTextView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이기대수변공원"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPager4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imageViewPager5"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/imageDescriptionTextView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/customTextView" />


        <TextView
            android:id="@+id/imageDescriptionTextView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="송도"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPager5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_navigation_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>